---
const { title, description, image, link } = Astro.props;
---

<article class="card">
  <img src={image} alt={title} class="card-image" />
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <a href={link} target="_blank" class="card-button">Visitar...</a>
  </div>
</article>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    width: 300px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
    background-color: #baacac;
  }

  .card:hover {
    transform: scale(1.02);
  }

  .card-image {
    width: 100%;
    height: 180px;
    object-fit: fill;
  }

  .card-content {
    padding: 16px;
  }

  .card-title {
    font-size: 1.25rem;
    margin: 0 0 8px;
  }

  .card-description {
    font-size: 0.95rem;
    color: #555;
    margin-bottom: 12px;
  }

  .card-button {
    display: inline-block;
    padding: 8px 16px;
    background-color: #0077cc;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
  }

  .card-button:hover {
    background-color: #005fa3;
  }
</style>
