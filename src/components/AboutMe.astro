---
// src/components/About.astro
 

// Valores por defecto
const {
  name = "Alex Rivera",
  role = "Full-Stack Developer",
  description = "Apasionado por construir aplicaciones web r√°pidas, seguras y escalables. Me encanta trabajar con Astro, React y Node.js para crear experiencias digitales de alto rendimiento.",
  image = "./juan.jpg"
}  = Astro.props;
---
 
 
<section class="about-section">
  <div class="about-container">
    <div class="about-image-wrapper">
      <img src={image} alt={`Foto de ${name}`} class="about-image" />
      <div class="glow"></div>
    </div>
    <div class="about-content">
      <h2 class="about-title">Hola, soy <span class="highlight">{name}</span></h2>
      <p class="about-role">{role}</p>
      <p class="about-description">{description}</p>
      <div class="tech-bar">
        <span class="tech-tag">Astro</span>
        <span class="tech-tag">TypeScript</span>
        <span class="tech-tag">React</span>
        <span class="tech-tag">Node.js</span>
        <span class="tech-tag">Tailwind</span>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: 3rem 1.5rem;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    font-family: 'Segoe UI', system-ui, sans-serif;
    border-radius: 16px;
    overflow: hidden;
    margin: 1.5rem auto;
    max-width: 900px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .about-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .about-container {
      grid-template-columns: 1fr 1.3fr;
    }
  }

  .about-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .about-image {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #3b82f6;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
    transition: transform 0.3s ease;
  }

  .about-image:hover {
    transform: scale(1.05);
  }

  .glow {
    position: absolute;
    width: 160px;
    height: 160px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.2) 0%, transparent 70%);
    z-index: -1;
  }

  .about-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .highlight {
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-role {
    font-size: 1.1rem;
    color: #93c5fd;
    margin: 0 0 1rem 0;
    font-weight: 500;
  }

  .about-description {
    font-size: 1rem;
    line-height: 1.7;
    color: #e2e8f0;
    margin: 0 0 1.5rem 0;
  }

  .tech-bar {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .tech-tag {
    background: rgba(59, 130, 246, 0.15);
    color: #93c5fd;
    padding: 0.4rem 0.8rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    border: 1px solid rgba(59, 130, 246, 0.3);
    backdrop-filter: blur(4px);
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: rgba(59, 130, 246, 0.3);
    transform: translateY(-2px);
  }
</style>