 
---
const links = [
  { href: '/astro-web/', label: 'Inicio' },
  { href: '/astro-web/about', label: 'Acerca de' },
  { href: '/astro-web/proyects', label: 'Proyectos' },
  { href: '/astro-web/blog', label: 'Blog' },
  { href: '/astro-web/contact', label: 'Contacto' }
];

// Obtener la ruta actual desde la URL
const { pathname } = Astro.url;
const currentSlug = pathname.replace(/\/$/, "").split("/").filter(Boolean).pop();
---

<nav class="navbar">
  <div class="container">
    <a class="logo" href="/">Web Juamaya üç∫</a>

    <button class="menu-toggle" aria-label="Abrir men√∫" aria-expanded="false" aria-controls="nav-links">‚ò∞</button>

    <ul class="nav-links" id="nav-links">
      {links.map(({ href, label }) => {
        const slug = href.replace(/\/$/, "").split("/").filter(Boolean).pop();
        const isActive = slug === currentSlug;
        return (
          <li>
            <a href={href} class={isActive ? 'active' : ''}>{label}</a>
          </li>
        );
      })}
    </ul>
  </div>
</nav>

<style>
  .navbar {
    background-color: #1a1a1a;
    padding: 1rem;
    color: white;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
  }

  .container {
   display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
    margin-right: auto;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    transition: max-height 0.3s ease-in-out;
  }

  .nav-links li a {
    color: white;
    text-decoration: none;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: #00bcd4;
  }

  .nav-links li a.active {
    color: #00bcd4;
    border-bottom: 2px solid #00bcd4;
  }

  .menu-toggle {
    display: none;
    font-size: 1.8rem;
    background: none;
    color: white;
    border: none;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav-links {
      position: absolute;
      top: 4.5rem;
      left: 0;
      right: 0;
      background: #1a1a1a;
      flex-direction: column;
      max-height: 0;
      overflow: hidden;
      gap: 1rem;
      padding: 0 1rem;
    }

    .nav-links.open {
      max-height: 300px;
      padding: 1rem;
    }
  }
</style>

<script >
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector(".menu-toggle");
    const navLinks = document.querySelector(".nav-links");
    const links = document.querySelectorAll(".nav-links a");

    if (toggle && navLinks) {
      toggle.addEventListener("click", () => {
        navLinks.classList.toggle("open");
        toggle.setAttribute("aria-expanded", navLinks.classList.contains("open").toString());
      });

      links.forEach((link) => {
        link.addEventListener("click", () => {
          navLinks.classList.remove("open");
          toggle.setAttribute("aria-expanded", "false");
        });
      });
    }
  });
</script>

